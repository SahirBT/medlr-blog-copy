<div class='flex flex-wrap bg-gradient-to-b from-[#00403F] lg:px-16 lg:py-8 2xs:pt-4 2xs:pl-4 relative z-0 w-full justify-between h-full'>

    <a href='/' class='flex p-2 mr-4'> 
        <div class='lg:w-[150px] 2xs:w-[100px] h-[50px] items-center justify-center flex'>
            {{> "icons/logo"}}
        </div>

    </a>
    
    {{!-- {/*Note that in this div we will use a ternary operator to decide whether or not to display the content of the div  */} --}}

    <div class="flex flex-grow w-auto justify-end">

        <div class='group/outer'>
            <button class='gh-burger group/inner md:hidden 2xs:w-[100px] h-[50px] items-center justify-center flex border-2 rounded-lg bg-black mt-[16%] focus:mb-4'>
                <div class='hidden group-focus/inner:flex md:relative absolute md:items-center md:mt-0 md:pr-0 items-start mt-5 pr-10 flex flex-col md:h-auto gap-x-12'>
                    <!-- Loop through the navigation items -->
                    {{#foreach navigation}}
                    <a href="{{url absolute="true"}}
                    " class="lg:inline-flex lg:w-auto w-full px-3 py-2 rounded text-white font-bold items-center justify-center hover:text-[#00BFBE]">{{label}}</a>
                    {{/foreach}}
                    <!-- End the loop -->

                </div>
            </button>
        </div>

        <div class='hidden group-focus:flex md:relative sm:absolute md:inline-flex md:flex-row md:ml-auto md:w-auto w-full md:items-center items-start  flex flex-col md:h-auto gap-x-12'>
            <!-- Loop through the navigation items -->
            {{#foreach navigation}}
            <a href="{{url absolute="true"}}
            " class="lg:inline-flex lg:w-auto w-full px-3 py-2 rounded text-white font-bold items-center justify-center hover:text-[#00BFBE]">{{label}}</a>
            {{/foreach}}
            <!-- End the loop -->
        </div>
    </div>
</div>